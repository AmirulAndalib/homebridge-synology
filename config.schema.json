{
  "pluginAlias": "homebridge-synology",
  "pluginType": "accessory",
  "singular": false,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "Diskstation"
      },
      "host": {
        "title": "Host",
        "type": "string",
        "required": true,
        "default": ""
      },
      "mac": {
        "title": "Mac Address",
        "type": "string",
        "required": true,
        "default": ""
      },
      "port": {
        "title": "Port",
        "type": "number",
        "required": true,
        "default": 5000
      },
      "username": {
        "title": "Username",
        "type": "string",
        "required": true,
        "default": "admin"
      },
      "password": {
        "title": "Password",
        "type": "string",
        "required": true,
        "default": ""
      },
      "protocol": {
        "title": "Protocol",
        "type": "string",
        "required": true,
        "default": "http"
      },
      "version": {
        "title": "Version",
        "type": "string",
        "required": true,
        "default": "6.2.2"
      },
      "startupTime": {
        "title": "Startup Time",
        "type": "number",
        "default": 60,
        "required": false
      },
      "shutdownTime": {
        "title": "Shutdown Time",
        "type": "number",
        "default": 60,
        "required": false
      },
      "disabled": {
        "title": "Disabled services",
        "type": "Array",
        "default": [],
        "required": false
      },
      "otp": {
        "title": "OTP-Code",
        "type": "string",
        "required": false
      }
    }
  }
}
